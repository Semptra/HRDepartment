<Window x:Class="HRDepartment.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRDepartment.WPF"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Human Resources Department" 
        Height="1080" 
        Width="1920"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button 
                x:Name="BackButton"
                Padding="0"
                Width="30"
                Height="30"
                Grid.Column="0"
                Click="BackButton_Click">
                <Button.Content>
                    <materialDesign:PackIcon 
                        Kind="ArrowLeftBoldCircleOutline"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="25"
                        Height="25"/>
                </Button.Content>
            </Button>

            <Button 
                Padding="0"
                Width="30"
                Height="30"
                x:Name="ForwardButton"
                Grid.Column="1"
                Click="ForwardButton_Click">
                <Button.Content>
                    <materialDesign:PackIcon
                        Kind="ArrowRightBoldCircleOutline"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="25"
                        Height="25"/>
                </Button.Content>
            </Button>

            <Button
                x:Name="NavigateToEmployeesPageButton"
                Content="Employees"
                Grid.Column="2"
                Margin="100,5,100,5"
                Click="NavigateToEmployeesPageButton_Click"/>

            <Button
                x:Name="NavigateToDepartmentsPageButton"
                Content="Departments"
                Grid.Column="3"
                Margin="100,5,100,5"
                Click="NavigateToDepartmentsPageButton_Click"/>

            <Button
                x:Name="NavigateToPositionsPageButton"
                Content="Poisitions"
                Grid.Column="4"
                Margin="100,5,100,5"/>

            <Button
                x:Name="NavigateToOrdersPageButton"
                Content="Orders"
                Grid.Column="5"
                Margin="100,5,100,5"/>
        </Grid>

        <Frame
            x:Name="ContentFrame"
            Grid.Row="1"
            NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
